<%= form_tag(general_reports_path, method: :get) do %>
  <div id="js-general-reports-companies-accordion" class="mt-3">
    <div class="card">
      <a class="card-header link-no-styles" data-toggle="collapse" data-target="#js-general-reports-companies-form" href="#js-general-reports-companies-form">
        <h5>Informe de Compañías</h5>
      </a>

      <div id="js-general-reports-companies-form" class="collapse show" data-parent="#js-general-reports-companies-accordion">
        <div class="card-body">
          <div class="row mb-2">
            <div class="col-12">
              <div class="row">
                <div class="col-12">
                  <%= select_tag "Compañías", options_from_collection_for_select(@user_companies, "id", "name", @companies_selected.map(&:id)), multiple: true, class: 'form-control', id: 'company_ids', name: 'companies_ids[]' %>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= submit_tag "Generar Informe", class: "btn btn-block btn-success h-100" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<hr style="width: 90%;">

<div id="js-general-report-information-accordion" class="mt-3">
  <a class="card bg-warning mb-3 link-no-styles" data-toggle="collapse" data-target="#js-general-report-information-card" href="#js-general-report-information-card">
    <div class="card-header">
      <h5>Información</h5>
    </div>
    <div id="js-general-report-information-card" class="collapse show" data-parent="#js-general-report-information-accordion">
      <div class="card-body">
        <div class="row mb-1">
          <div class="col-8">
            <strong><%= current_user.display_name %></strong>
          </div>
          <div class="col-4">
            <%= number_to_currency(@user_total_cost, strip_insignificant_zeros: true, delimiter: ".", separator: ",") %>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>

<div class="row mt-3">
  <div class="col-12">
    <div class="card bg-secondary text-white">
      <div class="card-header">
        <div class="row">
          <div class="col-8">
            <h5>Gráficos</h5>
          </div>
        </div>
      </div>
      <div class="card-body">
        <canvas id="sarasa" height=1000></canvas>
      </div>
    </div>
  </div>
</div>
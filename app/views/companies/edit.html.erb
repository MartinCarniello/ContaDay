<%= form_for @company do |company_form| %>
  <div class="row mt-3">
    <div class="col-12">
      <div class="card bg-secondary text-white">
        <div class="card-header">
          <div class="row">
            <div class="col-12">
              <h5>Editar Compañía</h5>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="name">Nombre</label>
            <%= company_form.text_field :name, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <label for="description">Descripción</label>
            <%= company_form.text_field :description, class: "form-control" %>
          </div>

          <hr>

          <%= company_form.fields_for :company_users, @company.company_users do |company_user_fields| %>
            <div class="row mb-1">
              <div class="col-10">
                <strong><%= company_user_fields.object.user_display_name %></strong>
              </div>
              <div class="col-1">
                <%= company_user_fields.text_field :bg_color, class: "form-control js-company-bg-user-color", readonly: "true", type: "hidden" %>
              </div>
              <div class="col-1">
                <%= company_user_fields.text_field :text_color, class: "form-control js-company-text-user-color", readonly: "true", type: "hidden" %>
              </div>
            </div>
          <% end %>
          <br>

          <div class="actions">
            <%= button_tag(class: "btn btn-success") do %>
              <%= fa_icon("check", text: "Guardar") %>
            <% end %>
            <%= link_to "Ir a gastos", general_expenses_company_path(@company) %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
